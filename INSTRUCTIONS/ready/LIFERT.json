  "crawl_tree": [
           {
               "pagination_urls": {
                   "path": "//div[@class='pager']/a[@id = 'nextPage']/@href"
               },
               "item_urls": {
                   "path": "//tr/@offerhref"
               }
           }],
    "item_page": {
            "methods": {
                "crawling_type": "common",
                "filter_duplicates": true
            },
            "fields": {
				"operation": {
                    "type": "string",
                    "path": "//h1//text()",
					"regex": "Продается|Сдается"
                },
                "date_info": {
                    "type": "date",
                    "time": "now"
                },
                "price_currency": {
                    "type": "string",
                    "value": "RUB"
                },
                "title_name": {
                    "type": "string",
                    "path": "//h1//text()"
                },
                "description": {
                    "type": "list to string",
                    "path": "//h4[contains(.,'Дополнительная')]/parent::div/text()"
                },
                "seller_name": {
                    "type": "string",
                    "path": "//div[@class='card_contacts']//div[@class='c_face']//text()"
                },
				"company_name": {
                    "type": "list to string",
                    "path": "//table[@class='card_saler_info']//b//text()"
                },
                "phone": {
                    "type": "phone",
                    "path": "//div[@class='c_phone']/text()"
                },
                "date_created": {
                    "type": "date",
                    "path": "//div[@class='card_date']//text()",
                    "regex": "добавлено (.+)",
                    "time": "from string"
                },
                "date_updated": {
                    "type": "date",
                    "path": "//div[@class='card_date']//text()",
                    "regex": "добавлено (.+)",
                    "time": "from string"
                },
                "price_total": {
                    "type": "list to string",
                    "path": "//div[@class='card_price']/text()",
                    "regex": "\\d+"
                },
                "source_longitude": {
                    "type": "float",
                    "path": "//script[text()[contains(.,'center')]]//text()",
                    "regex": ", (\\d*\\W?\\d+\\W?\\d+)\\],\\s*zoom:"
                },
                "source_latitude": {
                    "type": "float",
                    "path": "//script[text()[contains(.,'center')]]//text()",
                    "regex": "center: \\[(\\d*\\W?\\d+\\W?\\d+),"
                },
				"segment": {
                    "type": "string",
                    "path": "(//li//a[@class='current']//text())[1]"
                },
				"purpose": {
                    "type": "string",
                    "path": "//h1//text()",
					"regex": "офис |помещение свободного назначения|под гостиницу|под общепит|склад|участок|квартира|комната|дом"
                }
            },
            "tables": {
                "table_1": {
                    "_keys_path": "//h4[contains(.,'Параметры')]/parent::div/text()",
                    "_vals_path": "//h4[contains(.,'Параметры')]/parent::div/text()",
                    "key_regex": "^.+(?=:)",
                    "key_converter": {
                        "площадь_участка": {
                            "name": "land_area",
                            "type": "float",
                            "regex": "участка: (.+) сот"
                        },
                        "тип_земли": {
                            "name": "land_category",
                            "type": "string",
                            "regex": "земли: (.+)"
                        },
                        "площадь_помещения": {
                            "name": "area_total",
                            "type": "string",
                            "regex": "помещения: (.+) м"
                        }
                    }
                },
                "table_2": {
                    "_keys_path": "//h4[contains(.,'Местонахождение')]/parent::div/text()",
                    "_vals_path": "//h4[contains(.,'Местонахождение')]/parent::div/text()",
                    "key_regex": "^.+(?=:)",
                    "key_converter": {
                        "адрес": {
                            "name": "address",
                            "type": "string",
                            "regex": "Адрес: (.+)"
                        },
                        "населенный_пункт": {
                            "name": "address_city",
                            "type": "string",
                            "regex": "пункт: (.+)"
                        },
                        "район": {
                            "name": "intown_district",
                            "type": "string",
                            "regex": "Район: (.+)"
                        }
                    }
                }
            }
        }
    }


